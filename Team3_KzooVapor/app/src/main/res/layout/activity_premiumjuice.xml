<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrnd">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/spacejambutton"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_row="0"
        android:layout_column="1"
        android:src="@drawable/bcbutton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/ivcbutton"
        android:layout_marginLeft="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/rdabutton"
        android:layout_gravity="right"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/hydrosbutton"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nonamebutton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:layout_row="3"
        android:layout_column="0"
        android:src="@drawable/seducebutton"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton8"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:src="@drawable/mystbutton"
        android:layout_marginTop="20dp" />
</GridLayout>