<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrnd">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSJ"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/spacejambutton"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonBrew"
        android:layout_row="0"
        android:layout_column="1"
        android:src="@drawable/bcbutton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonIVC"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/ivcbutton"
        android:layout_marginLeft="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonRDA"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/rdabutton"
        android:layout_gravity="right"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonHydros"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/hydrosbutton"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonNo"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nonamebutton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSeduce"
        android:layout_row="3"
        android:layout_column="0"
        android:src="@drawable/seducebutton"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonMys"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:src="@drawable/mystbutton"
        android:layout_marginTop="20dp" />
</GridLayout>